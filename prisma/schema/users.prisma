enum Role {
  Admin
  User
}

model users {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  surname    String
  password   String
  rating     Int      @default(0)
  role       Role     @default(User)
  created_at DateTime @default(now())

  outgoingTransactions transactions[] @relation("from")
  incomingTransactions transactions[] @relation("to")
  auctions auctions[]
  sentMessages chats[] @relation("sender")
  receivedMessages chats[] @relation("receiver")
  users_cards users_cards[]
  bids bids[]
}
