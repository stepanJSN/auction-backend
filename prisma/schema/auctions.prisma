model auctions {
  id            String         @id @default(uuid())
  user_card     card_instances @relation(fields: [user_card_id], references: [id])
  user_card_id  String
  starting_bid  Decimal
  min_bid_step  Decimal
  max_bid       Decimal?
  min_length    DateTime
  max_length    DateTime
  is_completed  Boolean
  created_by    users          @relation(fields: [created_by_id], references: [id])
  created_by_id String

  bids bids[]
}
